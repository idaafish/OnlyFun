        <header>
            <h1>OnlyFun</h1>
            <a href="{{ path('user') }}"> Usuario </a>-
            <a href="{{ path('categoria') }}"> Categoria </a>-
            <a href="{{ path('video') }}"> Video </a>-
            <a href="{{ path('pagos') }}"> Pagos </a>    
            </ul>
        </header>
        <div class="content" id="0">
            {% block bodyIz %}
            {% endblock %}
            {% block bodyDe %}
            {% endblock %}
        </div>
    </body>
    <footer>
        <p>Footer</p>
    </footer>
</html>
